{
  "create_permutation_matrix": [
    {
      "input": [
        [
          0,
          1,
          2
        ]
      ],
      "expected_output": "[[0. 0. 1.]\n [1. 0. 0.]\n [0. 1. 0.]]"
    },
    {
      "input": [
        [
          1,
          0,
          2
        ]
      ],
      "expected_output": "[[1. 0. 0.]\n [0. 0. 1.]\n [0. 1. 0.]]"
    },
    {
      "input": [
        [
          2,
          1,
          0
        ]
      ],
      "expected_output": "[[0. 1. 0.]\n [1. 0. 0.]\n [0. 0. 1.]]"
    },
    {
      "input": [
        [
          1,
          2,
          0
        ]
      ],
      "expected_output": "[[1. 0. 0.]\n [0. 1. 0.]\n [0. 0. 1.]]"
    },
    {
      "input": [
        [
          0,
          2,
          1
        ]
      ],
      "expected_output": "[[0. 0. 1.]\n [0. 1. 0.]\n [1. 0. 0.]]"
    }
  ],
  "back_substitution": [
    {
      "input": [
        "[[1 2 3]\n [0 1 4]\n [0 0 1]]",
        "[6 5 1]"
      ],
      "expected_output": "[1. 1. 1.]"
    },
    {
      "input": [
        "[[2 1]\n [0 3]]",
        "[3 6]"
      ],
      "expected_output": "[0.5 2. ]"
    },
    {
      "input": [
        "[[1]]",
        "[5]"
      ],
      "expected_output": "[5.]"
    },
    {
      "input": [
        "[[1 2 3]\n [0 4 5]\n [0 0 6]]",
        "[14 22 12]"
      ],
      "expected_output": "[2. 3. 2.]"
    }
  ],
  "rotation_matrix_2d": [
    {
      "input": [
        0
      ],
      "expected_output": "[[ 1. -0.]\n [ 0.  1.]]"
    },
    {
      "input": [
        90
      ],
      "expected_output": "[[ 6.123234e-17 -1.000000e+00]\n [ 1.000000e+00  6.123234e-17]]"
    },
    {
      "input": [
        180
      ],
      "expected_output": "[[-1.0000000e+00 -1.2246468e-16]\n [ 1.2246468e-16 -1.0000000e+00]]"
    },
    {
      "input": [
        270
      ],
      "expected_output": "[[-1.8369702e-16  1.0000000e+00]\n [-1.0000000e+00 -1.8369702e-16]]"
    },
    {
      "input": [
        45
      ],
      "expected_output": "[[ 0.70710678 -0.70710678]\n [ 0.70710678  0.70710678]]"
    },
    {
      "input": [
        -90
      ],
      "expected_output": "[[ 6.123234e-17  1.000000e+00]\n [-1.000000e+00  6.123234e-17]]"
    }
  ],
  "scaling_matrix_2d": [
    {
      "input": [
        1,
        1
      ],
      "expected_output": "[[1 0]\n [0 1]]"
    },
    {
      "input": [
        2,
        2
      ],
      "expected_output": "[[2 0]\n [0 2]]"
    },
    {
      "input": [
        2,
        3
      ],
      "expected_output": "[[2 0]\n [0 3]]"
    },
    {
      "input": [
        0.5,
        0.5
      ],
      "expected_output": "[[0.5 0. ]\n [0.  0.5]]"
    },
    {
      "input": [
        1,
        -1
      ],
      "expected_output": "[[ 1  0]\n [ 0 -1]]"
    },
    {
      "input": [
        -1,
        1
      ],
      "expected_output": "[[-1  0]\n [ 0  1]]"
    }
  ],
  "translation_matrix_2d": [
    {
      "input": [
        0,
        0
      ],
      "expected_output": "[[1 0 0]\n [0 1 0]\n [0 0 1]]"
    },
    {
      "input": [
        1,
        2
      ],
      "expected_output": "[[1 0 1]\n [0 1 2]\n [0 0 1]]"
    },
    {
      "input": [
        -1,
        -2
      ],
      "expected_output": "[[ 1  0 -1]\n [ 0  1 -2]\n [ 0  0  1]]"
    },
    {
      "input": [
        0.5,
        1.5
      ],
      "expected_output": "[[1.  0.  0.5]\n [0.  1.  1.5]\n [0.  0.  1. ]]"
    },
    {
      "input": [
        10,
        -5
      ],
      "expected_output": "[[ 1  0 10]\n [ 0  1 -5]\n [ 0  0  1]]"
    }
  ],
  "complex_transformation_challenge": [
    {
      "input": [],
      "expected_output": "[[3.         2.        ]\n [4.73205081 3.        ]\n [4.48205081 3.4330127 ]\n [2.75       2.4330127 ]\n [3.         2.        ]]"
    }
  ]
}